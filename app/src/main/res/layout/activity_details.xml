    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bookNowBtn"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="18dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewPagerImages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/gradient_back_arrow"
                        android:padding="7dp"
                        android:tint="@color/black"
                        android:elevation="5dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_arrow_back"
                        android:layout_margin="10dp" />

                    <TextView
                        android:id="@+id/tvImageCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:padding="8dp"
                        android:layout_margin="10dp"
                        android:text="1/1"
                        android:backgroundTint="#E6333333"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_edittext_bg" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:color/transparent">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunny Farmhouse"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:layout_marginStart="10dp"
                            android:drawableStart="@drawable/star"
                            android:drawablePadding="3dp"
                            android:paddingTop="5dp"
                            android:paddingStart="5dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:backgroundTint="@color/green_accent"
                            android:background="@drawable/rounded_edittext_frosted_bg"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_location"
                            android:tint="#4CAF50" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mumbai"
                            android:textColor="#444"
                            android:layout_toRightOf="@id/image"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Escape to this stunning villa nestled in the heart of Lonavala.Escape to this stunning villa nestled in the heart"
                            android:textColor="#333333"
                            android:textSize="14sp"
                            android:layout_toLeftOf="@id/tvToggle"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/tvToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read more"
                            android:textColor="@color/darker_green_accent"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="4dp" />

                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:weightSum="4">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPricePerDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹9,000"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per day"
                                android:textColor="#000000"
                                android:textSize="13sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                        </LinearLayout>

                        <!-- Per Person (right side, centered inside) -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPricePerPerson"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹1,125"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="16sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="per person"
                                android:textColor="#373636"
                                android:textSize="13sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Key Details -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key Details"
                        android:textColor="#111"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp" />

                    <!-- Max Guests -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_guests"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvGuests"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maximum Guests: 10"
                            android:textSize="14sp"
                            android:textColor="#444" />
                    </LinearLayout>

                    <!-- Bedrooms -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bedroom"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvBedrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bedrooms: 4"
                            android:textSize="14sp"
                            android:textColor="#444" />
                    </LinearLayout>

                    <!-- Bathrooms -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_bath"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvBathrooms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bathrooms: 2"
                            android:textSize="14sp"
                            android:textColor="#444" />
                    </LinearLayout>

                    <!-- Contact -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_call"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact: +91-9876543210"
                            android:textSize="14sp"
                            android:textColor="#444" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="6dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location"
                            android:tint="#4CAF50"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address: 123 Farm Road, Mumbai"
                            android:textSize="14sp"
                            android:textColor="#444" />
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
    </ScrollView>

        <Button
            android:id="@+id/bookNowBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_alignParentBottom="true"
            android:background="@color/green_accent"
            android:textColor="#FFFFFF" />

</RelativeLayout>

